                    <argument name="label" xsi:type="string">My Shopping List</argument>
                    <argument name="path" xsi:type="string">shoppinglist/index/index</argument>
                    <argument name="class" xsi:type="string">tr-shopping-list-header-link</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
