<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tr_shopping_list" resource="default" engine="innodb" comment="TR Customer Shopping Lists">
        <column xsi:type="int" name="list_id" padding="10" unsigned="true" nullable="false" identity="true" comment="List ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="varchar" name="list_name" nullable="false" length="255" comment="List Name"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="list_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="TR_SHOPPING_LIST_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID" table="tr_shopping_list" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="TR_SHOPPING_LIST_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
    <table name="tr_shopping_list_item" resource="default" engine="innodb" comment="TR Shopping List Items">
        <column xsi:type="int" name="item_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Item ID"/>
        <column xsi:type="int" name="list_id" padding="10" unsigned="true" nullable="false" comment="List ID"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="decimal" name="qty" scale="4" precision="12" unsigned="false" nullable="false" default="1.0000" comment="Quantity"/>
        <column xsi:type="timestamp" name="added_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Added At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="item_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="TR_SHOPPING_LIST_ITEM_LIST_ID" table="tr_shopping_list_item" column="list_id" referenceTable="tr_shopping_list" referenceColumn="list_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="TR_SHOPPING_LIST_ITEM_PRODUCT_ID" table="tr_shopping_list_item" column="product_id" referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
    </table>
</schema>